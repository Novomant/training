<!DOCTYPE html>
<html>
<head>
    <title>Погода</title>
    <body>
    <form method="POST" action="<?=$_SERVER['PHP_SELF']?>">
        Город: <input type="text" name="town">
        <br>
        Дата: <input type="text" name="date">
        <br><br>
        <input type="submit" name="ok" value="Отправить">
    </form>
    </body>
<head>
</html>

<?php
if ($_POST['town'] & $_POST['date'])
{
     $homepage = file_get_contents('http://free.worldweatheronline.com/feed/weather.ashx?q='.$_POST['town'].'&date='.$_POST['date'].'&key=50635796a4181608121312&format=csv');
 $temp = tmpfile();
fwrite($temp, $homepage);
 fseek($temp, 0);
while ( ( $info = fgetcsv ($temp, 1000, ",") ) !== false)
    {
        echo $info[1]."<br>";
        echo $info[3]."<br>";
    }
}
?>
